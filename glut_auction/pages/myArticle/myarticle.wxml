<scroll-view class="main" scroll-y="true">
  <block wx:for="{{articles}}" wx:key="index" wx:for-item="list">
    <!--帖子区域-->
    <view class="artical">
      <!--头像昵称-->
      <view class="nickName">
        <image class="avatar" src="{{list.publisher.avatarUrl}}"></image>
        <view>{{list.publisher.nickName}}</view>
        <text>私密</text>
        <switch bindchange="setLock" data-switchid="{{list._id}}" checked="{{list.lock}}" data-lockindex="{{index}}"></switch>
      </view>
      <!--文本-->
      <view class="text" bindtap="toArticle" data-id="{{list._id}}">
        {{list.content}}
      </view>
      <!--图片-->
      <view class="img" bindtap="toArticle" data-id="{{list._id}}">
        <block wx:for="{{list.imagesUrl}}" wx:key="index" wx:for-item="img">
          <block wx:if="{{index < 3}}">
            <image src="{{img}}" mode="aspectFill" show-menu-by-longpress="true" style="width: 200rpx; height: 200rpx;margin: 2rpx;"></image>
          </block>
        </block>
      </view>
      <!--底部-->
      <view class="bottom">
        <text style="font-size: 27rpx;">{{list.publishFormatTime}}</text>
        <image src="/image/guankanliang.png" style="margin-left: 20rpx;"></image>
        <text>{{list.click}}</text>
        <image src="/image/comment.png" bindtap="toArticle" data-id="{{list._id}}"></image>
        <text bindtap="toArticle" data-id="{{list._id}}">{{list.comment.length}}</text>
        <image src="/image/praise-no.png"></image>
        <text>{{list.like.length}}</text>
      </view>
    </view>
  </block>
</scroll-view>
