<view class="container">
  <scroll-view class="main" scroll-y="true">
    <!--帖子区域-->
    <view class="artical">
      <!--头像昵称-->
      <view class="nickName">
        <image class="avatar" src="{{article.publisher.avatarUrl}}"></image>
        <view>{{article.publisher.nickName}}</view>
      </view>
      <!--文本-->
      <view class="text">
        {{article.content}}
      </view>
      <!--图片-->
      <view class="img">
        <block wx:for="{{article.imagesUrl}}" wx:key="index" wx:for-item="img">
          <image src="{{img}}" mode="aspectFill" show-menu-by-longpress="true" style="width: 200rpx; height: 200rpx;margin: 2rpx;" bindtap="previewImg" data-images="{{article.imagesUrl}}" data-index="{{index}}"></image>
        </block>
      </view>
      <!--底部-->
      <view class="bottom">
        <text style="font-size: 27rpx;">{{article.publishFormatTime}}</text>
      </view>
    </view>
    <!--评论区-->
    <view style="margin-left:3%;margin-top: 5%;border-bottom: rgb(247, 245, 243) 1px solid;width: 94%;">评论 {{commentArr.length}}</view>
    <view class="commentArea">
      <block wx:for="{{commentArr}}" wx:key="index" wx:for-item="com">
        <!--头像和昵称-->
        <view class="commentNickName">
          <image src="{{com.user.avatarUrl}}"></image>
          <text>{{com.user.nickName}}</text>
        </view>
        <!--评论内容-->
        <view class="context">
          {{com.comtent}}
        </view>
        <view style="margin-left: 11%;font-size: 26rpx; border-bottom: 0.5px rgb(225, 227, 230) solid;margin-top: 5rpx;">
          <text>{{com.publishTimeFormat}}</text>
        </view>
      </block>
    </view>
  </scroll-view>
  <!--底部发表评论区域-->
  <view class="doComment">
    <image src="{{user.avatarUrl}}"></image>
    <!-- <input placeholder="我来说几句..." 	placeholder-style="font-size:28rpx"/> -->
    <textarea placeholder="我来说几句..." placeholder-style="font-size:28rpx" maxlength="140" bindinput="setCommentText" value="{{commentText}}"></textarea>
    <view class="publish" bindtap="publishComment">发送</view>
  </view>
</view>