page {
  background-color: #f8f8f8;
}

.login-container {
  height: 900rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

/* 图标的样式 */
.contact-filled {
  width: 150rpx;
  margin-bottom: 16rpx;
  background-color: rgba(100, 107, 112, 0.548);
  border-radius: 50%;

}

/* 登录按钮的样式 */
.btn-login {
  width: 90%;
  border-radius: 100px;
  margin: 15px 0;
  background-color: #19dd5a;
  color: #f8f8f8;
}

/* 按钮下方提示消息的样式 */
.tips-text {
  font-size: 12px;
  color: gray;
}

/* 用户信息样式 */
.top-box {
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}

/* 用户头像样式 */
.top-box .avatar {
  display: block;
  width: 90px;
  height: 90px;
  border-radius: 45px;
  border: 1px solid white;
  box-shadow: 0 1px 5px black;
}

/* 用户昵称样式 */
.top-box .nickname {
  color: rgb(14, 10, 10);
  font-weight: bold;
  font-size: 20px;
  margin-top: 10px;
  display: flex;
  justify-content: center;
}

.mainContext {
  width: 100%;
  height: 70%;
  background-color: rgb(243, 245, 240);
}

.userinfo {
  height: 30%;
  width: 100%;
  display: flex;
}

.picture {
  width: 160rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10px;

}

.userinfo-icon {
  width: 150rpx;
  height: 150rpx;
}
.article {
  height: 40%;
  width: 100%;
}
.article view {
  height: 100rpx;
  width: 100%;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}

.article view .img {
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
}
.article view text {
  margin-right: 26rpx;
}
.article view image{
  width: 50rpx;
  height: 50rpx;
  margin-left: 55%;
}

