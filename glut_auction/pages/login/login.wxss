page {
  background-color: #f8f8f8;
}

.login-container {
  height: 900rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

/* 图标的样式 */
.contact-filled {
  width: 150rpx;
  margin-bottom: 16rpx;
  background-color: rgba(100, 107, 112, 0.548);
  border-radius: 50%;
  
}

/* 登录按钮的样式 */
.btn-login {
  width: 90%;
  border-radius: 100px;
  margin: 15px 0;
  background-color: #19dd5a;
  color: #f8f8f8;
}

/* 按钮下方提示消息的样式 */
.tips-text {
  font-size: 12px;
  color: gray;
}

/* 用户信息样式 */
.top-box {
  height: 400rpx;
  background-color: #b2cf9a;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}

/* 用户头像样式 */
.top-box .avatar {
  display: block;
  width: 90px;
  height: 90px;
  border-radius: 45px;
  border: 2px solid white;
  box-shadow: 0 1px 5px black;
}

/* 用户昵称样式 */
.top-box .nickname {
  color: white;
  font-weight: bold;
  font-size: 16px;
  margin-top: 10px;

}
.mainContext{
  width: 100%;
  height: 70%;
  background-color: rgb(220, 230, 210);
}

.userinfo{
  height: 30%;
  width: 100%;
  display: flex;
}
.picture{
  width:160rpx;
  height:160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10px;

}
.userinfo-icon{
  width: 150rpx;
  height: 150rpx;
}
