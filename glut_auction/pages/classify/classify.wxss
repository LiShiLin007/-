/* 分类 */
page{
  height: 100%;
  padding: 0;
  margin: 0;
}
/*整体*/  
.main {    
  bottom: 0;
  top:0;
  left: 0;
  right: 0;
  position: fixed;
  width: 100%;  
  height: 100%;  
  background-color: #fff;   
  }

.leftcontainer{
  display: inline-block;  
  width: 30%;  
  height: 100%;    
  border-radius: 20rpx;
  background: #abca9b;  
  text-align: center;
  font-size: 35rpx;
  color: #fff;
}
.classifyItem{
  margin: 10px;
  border-radius: 10px;
}
.classifyItemactive{
  border-radius: 10px;
  font-size: 44rpx;
  margin: 10px;
  background: rgb(206, 230, 168);
  box-shadow:4px 4px 15px rgb(9, 66, 38);
}
.rightContainer{
  position: absolute;
  top: 0;  
  right: 0;   
  width: 70%;  
  height: 100%;  
  padding: 3px;  
  box-sizing: border-box;  
  background: rgba(238, 237, 243, 0.808);
}

.goodsContainer{
  border-radius: 8px;
  box-shadow:4px 4px 15px rgb(164, 207, 186);
  margin-bottom: 4px;
  margin-right: 2px;
  height: 100px;
  background-color: azure;
}

.goodsContainer .img{
  width:50%;
  height: 100px;
  float: left;
}
.goodsImage{
  margin: 5%;
  border-radius: 10px;
  width:90%;
  height:90%;
}
.goodsInfo{
  position: absolute;
  margin-left: 55%;
  margin-top: 3%;
}
.title{
  display: inline-block;
  white-space: nowrap; 
  width: 100%; 
  overflow: hidden;
  text-overflow:ellipsis;
}
