/* pages/userArticle/userArticle.wxss */.main{
  height: 100%;
  padding-bottom: 10rpx;
}
.article{
  max-height: 50%;
  width: 96%;
  display: flex;
}
.nickName{
  margin-top: 2%;
  margin-left: 2%;
  height: 8%;
  width: 98%;
  display: flex;
  float: left;
}
.nickName image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}
.nickName view{
  position: absolute;
  margin-left: 13%;
  color: rgb(9, 49, 85);
  font-size: 35rpx;
}
.text{
  margin-left: 15%;
  max-height: 20%;
}
.img{
  margin-top: 2%;
  margin-left: 15%;
  max-height: 40%;
  display: flex;
  flex-wrap: wrap;
}
.bottom{
  margin-top: 2%;
  margin-left: 15%;
  height: 4%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 80%;
}
.bottom image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}
.sentArticle{
  position: fixed;
  z-index: 1;
  bottom: 15rpx;
  width: 100rpx;
  height: 100rpx;
  left: 43%;
}